{
  "name": "pet-magic-ai-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for PetMagicAI (Mobile App + Cloud Functions)",
  "scripts": {
    "mobile": "npm --prefix mobile start",
    "mobile:install": "npm --prefix mobile install",
    "functions:build": "npm --prefix functions run build",
    "functions:deploy": "npm --prefix functions run deploy",
    "functions:install": "npm --prefix functions install",
    "deploy:all": "firebase deploy --only functions,firestore:rules,storage",
    "deploy:functions": "firebase deploy --only functions",
    "secrets:set": "firebase functions:secrets:set OPENAI_API_KEY",
    "dev:emulator": "firebase emulators:start",
    "setup": "npm run mobile:install && npm run functions:install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}

